@model List<TechZone.Application.DTOs.ProductListDto>
@{
    ViewData["Title"] = "Home - TechZone";
}

<!-- Hero Section -->
<section class="bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-3">Welcome to TechZone</h1>
                <p class="lead mb-4">Your One-Stop Shop for Latest Technology Products</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-light btn-lg">
                    <i class="bi bi-shop"></i> Shop Now
                </a>
            </div>
            <div class="col-lg-6">
                <img src="~/images/hero-banner.jpg" alt="TechZone" class="img-fluid rounded" 
                     onerror="this.src='https://via.placeholder.com/600x400?text=TechZone'">
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Shop by Category</h2>
        <div class="row g-4">
            @if (ViewBag.Categories != null)
            {
                @foreach (var category in ViewBag.Categories)
                    {
                    <div class="col-md-4 col-lg-2">
                        <a asp-controller="Products" asp-action="Category" asp-route-id="@category.Id" 
                           class="text-decoration-none">
                            <div class="card h-100 text-center hover-shadow">
                                <div class="card-body">
                                    <i class="bi bi-laptop display-4 text-primary mb-3"></i>
                                    <h6 class="card-title">@category.Name</h6>
                                    <small class="text-muted">@category.ProductCount items</small>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Featured Products</h2>
            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">
                View All <i class="bi bi-arrow-right"></i>
            </a>
        </div>

        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var product in Model)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="card h-100 product-card">
                            <img src="@(product.ImageUrl ?? "https://via.placeholder.com/300x300?text=" + Uri.EscapeDataString(product.Name))" 
                                 class="card-img-top" alt="@product.Name" style="height: 250px; object-fit: cover;">
                            
                            @if (product.DiscountPrice.HasValue)
                            {
                                <span class="badge bg-danger position-absolute top-0 end-0 m-2">
                                    SALE
                                </span>
                            }

                            <div class="card-body">
                                <h6 class="card-title">
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" 
                                       class="text-decoration-none text-dark">
                                        @product.Name
                                    </a>
                                </h6>
                                <p class="card-text text-muted small">@product.ShortDescription</p>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        @if (product.DiscountPrice.HasValue)
                                        {
                                            <span class="text-decoration-line-through text-muted small">₹@product.Price.ToString("N0")</span>
                                            <br>
                                            <strong class="text-primary fs-5">₹@product.DiscountPrice.Value.ToString("N0")</strong>
                                        }
                                        else
                                        {
                                            <strong class="text-primary fs-5">₹@product.Price.ToString("N0")</strong>
                                        }
                                    </div>
                                    <div>
                                        @if (product.AverageRating > 0)
                                        {
                                            <small class="text-warning">
                                                <i class="bi bi-star-fill"></i> @product.AverageRating.ToString("0.0")
                                            </small>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-white border-0">
                                <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" 
                                   class="btn btn-primary w-100">
                                    <i class="bi bi-eye"></i> View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No products available at the moment.
            </div>
        }
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4 text-center">
            <div class="col-md-3">
                <i class="bi bi-truck display-4 text-primary mb-3"></i>
                <h5>Free Shipping</h5>
                <p class="text-muted">On orders over ₹999</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-shield-check display-4 text-primary mb-3"></i>
                <h5>Secure Payment</h5>
                <p class="text-muted">100% secure transactions</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-arrow-repeat display-4 text-primary mb-3"></i>
                <h5>Easy Returns</h5>
                <p class="text-muted">30-day return policy</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-headset display-4 text-primary mb-3"></i>
                <h5>24/7 Support</h5>
                <p class="text-muted">Dedicated customer service</p>
            </div>
        </div>
    </div>
</section>

<style>
    .hover-shadow:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        transform: translateY(-5px);
        transition: all 0.3s ease;
    }

    .product-card {
        transition: all 0.3s ease;
    }

    .product-card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
</style>